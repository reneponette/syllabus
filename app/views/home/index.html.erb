
<div class="row">
<% @products.each do |product| %>
	
  <div class="col-sm-3 col-md-3">
    <div class="thumbnail">
	  <%= link_to image_tag(product.image.url), product_path(product) %>  
      <div class="caption">	      	
        <h3><%= product.name %></h3>
		<p><%= product.description %></p>        
        <p><%= product.price %></p>
      </div>
    </div>
  </div>
	
<% end %>
</div>
